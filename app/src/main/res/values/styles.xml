<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundScreen</item>
        <item name="android:statusBarColor">@color/backgroundScreen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">#FFFFFF</item>

    </style>

    <style name="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/backgroundScreen</item>
        <item name="colorPrimary">@color/enableForm</item>
    </style>

    <style name="buttomBase" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_primary_rounded</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/button_margin_right</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textInput">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <style name="materialButtomPrimary" parent="buttomBase">
        <item name="backgroundTint">@drawable/buttom_primary_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>